!!!
%html
  %head
    %title Wingman
    = stylesheet_link_tag    'wingman'
    = javascript_include_tag 'wingman'
  %body
    %header
      - if flash[ :notice ]
        .notice= flash[ :notice ]
      - if flash[ :alert ]
        .alert= flash[ :alert ]
      %h1= Wingman.application_name
      %span= controller_name.titleize
    = yield
